{
    "compilerOptions": {

        "module": "esnext",
        "target": "es5",
        "lib": [
            "es5",
            "dom",
            "es2015.promise",
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitReturns":true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        
        "sourceMap": true
    }
}