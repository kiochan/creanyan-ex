{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
    ],
    "rules": {
        "ter-indent": [
            true,
            4,
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case",
        ],
        "no-duplicate-variable": true,
        "no-debugger": true,
        "max-line-length": [
            true,
            {
                "limit": 100,
                "ignore-pattern": "public |private |function |^import |^export {(.*?)}|class [a-zA-Z]+ implements |// ",
            }
        ],
    },
    "jsRules": {},
    "rulesDirectory": [],
}